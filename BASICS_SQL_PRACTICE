SHOW databases;
USE AdventureWorksDW;
SHOW tables;
SELECT *
FROM dimproduct;

#SELECT AND FROM CLAUSE 
SELECT  ProductKey AS ID_Product,
 ProductAlternateKey AS Product_Alternate,
 EnglishProductName AS En_Product_Name,
 Color AS Color,
 StandardCost AS Standard_Cost, 
 FinishedGoodsFlag AS Finished_Goods
FROM dimproduct;

# WHERE + = OPERATOR
SELECT  
FinishedGoodsFlag AS Finished_Goods
FROM dimproduct
WHERE  FinishedGoodsFlag=1;

#LIKE OPERATOR + AS CALCULATION
SELECT  ProductKey,ModelName,EnglishProductName,ListPrice-StandardCost AS MARKUP
FROM dimproduct
WHERE ProductAlternateKey LIKE 'FR%' OR 'BK%';

#Between 
SELECT  
FinishedGoodsFlag AS Finished_Goods
FROM dimproduct
WHERE  ListPrice BETWEEN 1000 AND 2000;

#dimemployee#
USE AdventureWorksDW;
