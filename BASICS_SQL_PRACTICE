FROM dimemployee;

##TO BE VERIFIED# #impiegati aziendali, lʼelenco dei soli agenti. Gli agenti sono i dipendenti per i quali il campo SalespersonFlag è uguale a 1. 
SELECT employeekey, Parentemployeekey
FROM dimemployee
WHERE SalespersonFlag= 1;

 ##TO BE VERIFIED#
USE AdventureWorksDW;
SHOW tables;
SELECT *
FROM factresellersales;

SELECT SalesOrderNumber, SalesOrderLineNumber,ProductKey,SalesAmount,TotalProductCost, OrderDate,
  (SalesAmount - TotalProductCost) AS Revenue
FROM factresellersales
WHERE OrderDate >= '01-01-2020'
AND ProductKey IN(597, 598, 477, 214);
